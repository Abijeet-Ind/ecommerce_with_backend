extends overview

block content
    section.body
        div.journey-container
            span.journey  My shit Journey
            span.journey-where  From A to Z
            span.join  Join me for daily reflections and delicious recipes

        //- product listing
        div.food-image-show
            each product in productData
                div.food-image-show
                 -const link = product.name.replace(" ", "_");
                 -const small = link.toLowerCase()
                  a(href=`/shop/${small}`)
                    .image
                      span
                        img(src=`${product.image}` alt='we ate them')
                      span.image_intro
                        h2=  product.name 
                        p
                          | product.price
                          | perspiciatis? Magni itaque ad, cupiditate dolorum perferendis at!
                          

        //- button 
        section.button-section
            button.moreButton  More


